<!-- // views/articles/show.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Ad-Post</title>
</head>
<body class="bg-body-tertiary">
  <div class="container">

    <h1 class="mb-1 mt-5"><%= article.title %></h1>

    <div class="text-muted mb-2">
      <%= article.createdAt.toLocaleDateString() %>
    </div>

    <a href="/" class="btn btn-primary rounded-pill px-3 mt-3 mb-3">All Posts</a>
    
    <a href="/articles/edit/<%= article.id %>" class="btn btn-info rounded-pill px-3 mt-3 mb-3">Edit</a>

    <h5 class="border-top pt-3 mt-3">Description</h5>
    <div class="card-text mb-2 text-body-secondary"><%= article.description %></div>

    <h5 class="border-top pt-3 mt-2">Content</h5>
    <div class="text-body-secondary">
      <%= article.markdown %>
    </div>
    
  </div>
</body>
</html>